<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="treeFEGO_action" model="ir.actions.act_window">
        <field name="name">TreeFEGO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea una nueva empresa!
            </p>
        </field>
    </record>
    <record id="formFEGO_form" model="ir.ui.view">
        <field name="name">sge03_2.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="country_id"/>
                        <field name="lang"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="formFEGO_action" model="ir.actions.act_window">
        <field name="name">FormFEGO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">form,tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea una nueva empresa!
            </p>
        </field>
    </record>
    
    <!-- MENU PARENT -->
    <menuitem 
        id="sge03_2_root_menu" 
        name="MenuFEGO"
        sequence="7"
        action="treeFEGO_action">
    </menuitem>

    <!-- MENUS SECUNDARIOS -->
    <menuitem
        id="ver_empresas"
        parent="sge03_2_root_menu"
        name="VerEmpresas"
        action="treeFEGO_action">
    </menuitem>
    <menuitem
        id="ver_una_empresa"
        parent="sge03_2_root_menu"
        name="NuevaEmpresa"
        action="formFEGO_action">
    </menuitem>
</odoo>
